  OLED.display(); // สั่งให้จอแสดงผล
  OLED.drawBitmap(0, 0,  myBitmap, 128, 64, WHITE);
  OLED.display();
  delay(3000);
  OLED.clearDisplay(); // ลบภาพในหน้าจอทั้งหมด

  OLED.display(); // สั่งให้จอแสดงผล
}

